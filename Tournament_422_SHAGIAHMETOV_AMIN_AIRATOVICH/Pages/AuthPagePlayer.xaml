<Page x:Class="Tournament_422_SHAGIAHMETOV_AMIN_AIRATOVICH.Pages.AuthPagePlayer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tournament_422_SHAGIAHMETOV_AMIN_AIRATOVICH.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPagePlayer">

    <Grid>
        <StackPanel>
            <TextBlock FontSize="30" HorizontalAlignment="Center">Авторизация</TextBlock>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock>Логин:</TextBlock>
                <TextBox x:Name="LoginTb" Width="90"></TextBox>
                <Button Click="Button_Click_1">C</Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock>Пароль:</TextBlock>
                <PasswordBox x:Name="PassPb" Width="90"></PasswordBox>
                <Button Click="Button_Click">C</Button>
            </StackPanel>
            <Button>Войти</Button>
            <Button Click="Button_Click_2">Зарегистрироваться</Button>
        </StackPanel>
    </Grid>
</Page>
